procedure TForm2.Timer1Timer(Sender: TObject);
Begin
 Form2.Statusbar1.Panels [0].Text := ' '+datetostr(date);// para data
 Form2.statusbar1.Panels [1].Text := ' '+timetostr(now);//para hora
 end;
End.
