procedure TForm2.SpeedButton1MouseLeave(Sender: TObject);
begin
Screen.Cursor := crHourglass;
  begin
  if (Form2.Panel12.Width = 150) or (SpeedButton14.Down = True) then

  else
    Form2.Panel12.Width := 48;
  end;
end;

procedure TForm2.SpeedButton2Click(Sender: TObject);
begin
  Screen.Cursor := crHourglass;
  Form2.Panel12.Width := 150;
  Form2.Panel13.Visible := not Panel13.Visible;
  Form2.Panel14.Visible := False;
  Screen.Cursor := crDefault;
end;

procedure TForm2.SpeedButton2MouseEnter(Sender: TObject);
begin
  SpeedButton2.Down := True;
  Screen.Cursor := crHourglass;
  Form2.Panel12.Width := 150;
  Form2.Panel13.Visible := not Panel13.Visible;
  Form2.Panel14.Visible := False;
  Screen.Cursor := crDefault;
end;

procedure TForm2.SpeedButton3Click(Sender: TObject);
begin
  Screen.Cursor := crHourglass;
  begin
  if bExpandido then
    Form2.Panel12.Width := 48
  else
    Form2.Panel12.Width := 150;
    //Form2.Panel1.Visible := True;
    //Form2.Panel2.Visible := True;
    //Form2.Panel3.Visible := True;
    //Form2.Panel4.Visible := True;

  bExpandido := not bExpandido;
  end;
  Form2.Panel13.Visible := False;
  Form2.Panel14.Visible := False;
  Screen.Cursor := crDefault;
end;

procedure TForm2.SpeedButton3MouseEnter(Sender: TObject);
begin
  SpeedButton3.Down := True;
  Form2.Panel13.Visible := False;
  Form2.Panel14.Visible := False;
end;

